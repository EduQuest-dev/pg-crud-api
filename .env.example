# PostgreSQL connection
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# Server
PORT=3000
HOST=0.0.0.0

# Comma-separated list of schemas to expose (leave empty for all non-system schemas)
SCHEMAS=

# Comma-separated list of schemas to exclude
EXCLUDE_SCHEMAS=

# Comma-separated list of tables to exclude (format: schema.table)
EXCLUDE_TABLES=

# Max rows per page
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Maximum rows per bulk insert (default: 1000)
MAX_BULK_INSERT_ROWS=1000

# Maximum request body size in bytes (default: 5242880 = 5MB)
BODY_LIMIT=5242880

# Enable Swagger UI
SWAGGER_ENABLED=true

# CORS allowed origins (comma-separated URLs, "true" for all, "false" for none)
# Default: true in development, false in production
CORS_ORIGINS=

# Authentication
# Secret used to derive API keys via HMAC-SHA256. Required when API_KEYS_ENABLED=true.
# Generate a key: npm run generate-key -- <API_SECRET> <label>
API_SECRET=
# Set to false to disable API key authentication (default: true)
API_KEYS_ENABLED=true

# Set to true to include PostgreSQL error details in API responses (default: false)
EXPOSE_DB_ERRORS=false
